{
	"name": "vue-bingo-admin",
	"private": true,
	"version": "0.0.0",
	"author": {
		"name": "zaizai",
		"email": "373045134@qq.com",
		"url": "https://github.com/xulei131401"
	},
	"scripts": {
		"bootstrap": "pnpm install",
		"serve": "npm run dev",
		"dev": "vite",
		"build": "cross-env NODE_ENV=production vue-tsc --noEmit && vite build",
		"preview": "vite preview",
		"clean:cache": "rimraf node_modules/.cache/ && rimraf node_modules/.vite",
		"clean:lib": "rimraf node_modules",
		"lint": "npx eslint --fix --ext .js,.vue,.ts,.html,.d.ts src",
		"lint:eslint": "eslint --cache --max-warnings 0  \"{src,mock}/**/*.{vue,ts,tsx}\" --fix",
		"lint:prettier": "prettier --write  \"src/**/*.{js,json,tsx,css,less,scss,vue,html,md}\"",
		"lint:stylelint": "stylelint --cache --fix \"**/*.{vue,less,postcss,css,scss}\" --cache --cache-location node_modules/.cache/stylelint/",
		"lint:lint-staged": "lint-staged"
	},
	"dependencies": {
		"@ant-design/icons-vue": "^6.1.0",
		"@surely-vue/table": "^2.4.8",
		"@vueuse/core": "^9.1.1",
		"ant-design-vue": "^3.2.11",
		"axios": "^0.27.2",
		"dayjs": "^1.11.5",
		"mitt": "^3.0.0",
		"normalize.css": "^8.0.1",
		"pinia": "^2.0.21",
		"vue": "^3.2.38",
		"vue-router": "^4.1.5"
	},
	"devDependencies": {
		"@intlify/unplugin-vue-i18n": "^0.5.0",
		"@types/lodash-es": "^4.17.6",
		"@types/node": "^18.7.14",
		"@typescript-eslint/eslint-plugin": "^5.36.1",
		"@typescript-eslint/parser": "^5.36.1",
		"@vitejs/plugin-vue": "^3.0.3",
		"@vitejs/plugin-vue-jsx": "^2.0.0",
		"autoprefixer": "^10.4.8",
		"consola": "^2.15.3",
		"cross-env": "^7.0.3",
		"eslint": "^8.23.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-n": "^15.2.5",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-promise": "^6.0.1",
		"eslint-plugin-vue": "^9.4.0",
		"less": "^4.1.3",
		"lodash-es": "^4.17.21",
		"prettier": "^2.7.1",
		"sass": "^1.54.7",
		"stylelint": "^14.11.0",
		"stylelint-config-standard": "^28.0.0",
		"typescript": "^4.8.2",
		"unplugin-auto-import": "^0.11.2",
		"unplugin-vue-components": "^0.22.4",
		"vite": "^3.0.9",
		"vite-plugin-svg-icons": "^2.0.1",
		"vue-i18n": "^9.2.2",
		"vue-tsc": "^0.40.5"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/xulei131401/vue-ant-admin"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/xulei131401/vue-ant-admin/issues"
	},
	"homepage": "https://github.com/xulei131401/vue-ant-admin",
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"{!(package)*.json,*.code-snippets,.!(browserslist)*rc}": [
			"prettier --write--parser json"
		],
		"package.json": [
			"prettier --write"
		],
		"*.vue": [
			"eslint --fix",
			"prettier --write",
			"stylelint --fix"
		],
		"*.{scss,less,style,html}": [
			"stylelint --fix",
			"prettier --write"
		],
		"*.md": [
			"prettier --write"
		]
	}
}
