{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
		"noImplicitAny": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "strict": true,
  },
	"include": [
      "src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
