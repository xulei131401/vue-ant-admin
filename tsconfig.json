{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
		// "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "experimentalDecorators": true,
    "strict": true,
    "jsx": "preserve",
		"allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
		"noImplicitAny": false,
    "skipLibCheck": true,
    "baseUrl": ".",
		"types": ["vite/client"],
		"removeComments": true,
    "paths": {
      "@/*": ["src/*"],
			"#/*": ["types/*"]
    }
  },
  "include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"types/**/*.d.ts",
    "types/**/*.ts",
		"vite.config.ts"
	],
	"exclude": ["node_modules", "dist", "**/*.js", "tests/server/**/*.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
